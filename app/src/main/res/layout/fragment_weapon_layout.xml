<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="31dp"
        android:text="Weapon 1"
        android:textColor="000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/ibtn1"
        android:layout_width="50dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/single"
        android:background="@drawable/buttonshape_left"
        android:layout_alignTop="@+id/ibtn2"
        android:layout_alignEnd="@+id/tvId_text" />

    <ImageButton
        android:id="@+id/ibtn2"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn3"
        android:layout_toEndOf="@+id/tvShoot"
        android:background="@drawable/buttonshape_center"
        app:srcCompat="@drawable/burst1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tvOxgen_level"
        android:layout_marginTop="16dp"
        android:layout_toStartOf="@+id/ivBattery_icon"
        android:background="@drawable/buttonshape_center"
        android:text="AUTO"
        android:textColor="#000000"
        android:textSize="10sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn4"
        android:text="SAFE"
        android:textColor="#000000"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape_right"
        android:layout_alignTop="@+id/btn3"
        android:layout_toEndOf="@+id/tvShoot_text" />

    <TextView
        android:id="@+id/tvWarnings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvtitle"
        android:layout_below="@+id/tvtitle"
        android:layout_marginTop="37dp"
        android:text="Warnings"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/tvWarnings_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvWarnings"
        android:layout_below="@+id/tvWarnings"
        android:text="1: Device could not be connected to. Make sure it is turned on and connected to the network."
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvWarning_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvWarnings_text1"
        android:layout_below="@+id/tvWarnings_text1"
        android:layout_marginTop="15dp"
        android:text="2: Weapon is low on gas or battery. Check levels."
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Details"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/tvWarning_text2"
        android:layout_alignStart="@+id/tvWarning_text2" />

    <TextView
        android:id="@+id/tv_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        android:layout_below="@+id/tvDetails"
        android:layout_toEndOf="@+id/tvWarnings" />

    <TextView
        android:id="@+id/tvName_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvName"
        android:layout_alignBottom="@+id/tvName"
        android:layout_alignEnd="@+id/ivGas_icon"
        android:text="Weapon 1" />

    <TextView
        android:id="@+id/tvId_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_Id"
        android:layout_toEndOf="@+id/tvtitle"
        android:text="1" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        android:layout_below="@+id/tv_Id"
        android:layout_alignEnd="@+id/tv_Id" />

    <TextView
        android:id="@+id/tvFire_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fire mode"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        android:layout_below="@+id/tvName"
        android:layout_alignEnd="@+id/tvName" />

    <TextView
        android:id="@+id/tvShoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shoot"
        android:textStyle="bold"

        android:textAlignment="textEnd"
        android:layout_below="@+id/tvFire_mode"
        android:layout_alignEnd="@+id/tvFire_mode" />

    <TextView
        android:id="@+id/tvFire_mode_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvName_text"
        android:layout_below="@+id/tvName_text"
        android:text="Burst" />

    <TextView
        android:id="@+id/tvShoot_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvShoot"
        android:layout_alignBottom="@+id/tvShoot"
        android:layout_toEndOf="@+id/tvFire_mode_text"
        android:text="Shoot1, Shoot 3" />

    <TextView
        android:id="@+id/tvLevels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Levels"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/tvShoot"
        android:layout_alignEnd="@+id/tvDetails" />

    <ImageView
        android:id="@+id/ivOxgen_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/gaslevel3x"
        android:layout_below="@+id/tvLevels"
        android:layout_toEndOf="@+id/tvShoot"
        android:layout_marginTop="26dp"
        android:layout_alignStart="@+id/tvOxgen" />

    <ImageView
        android:id="@+id/ivGas_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/gaslevel3x"
        android:layout_above="@+id/btn3"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/ivBattery_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvWarning_text2"
        android:layout_alignTop="@+id/ivGas_icon"
        app:srcCompat="@drawable/batterylevel3x" />

    <TextView
        android:id="@+id/tvPropane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Propane"
        android:textSize="10sp"
        android:layout_below="@+id/ivGas_icon"
        android:layout_alignEnd="@+id/ivGas_icon" />

    <TextView
        android:id="@+id/tvOxgen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oxgen"
        android:textSize="10sp"
        android:layout_below="@+id/ivOxgen_icon"
        android:layout_alignEnd="@+id/ibtn1" />

    <TextView
        android:id="@+id/tvBattery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery"
        android:textSize="10sp"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/ivBattery_icon"
        android:layout_alignStart="@+id/tvBattery_level" />

    <TextView
        android:id="@+id/tvPropane_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14%"
        android:textSize="10sp"
        android:layout_below="@+id/tvPropane"
        android:layout_alignEnd="@+id/tvPropane" />

    <TextView
        android:id="@+id/tvOxgen_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100%"
        android:textSize="10sp"
        android:layout_below="@+id/tvOxgen"
        android:layout_alignStart="@+id/tvOxgen" />

    <TextView
        android:id="@+id/tvBattery_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="97%"
        android:textSize="10sp"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/tvBattery"
        android:layout_alignStart="@+id/ivBattery_icon" />


</RelativeLayout>