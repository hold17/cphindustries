    <LinearLayout
        android:id="@+id/fr_weapon_details_edit_linearLayout_fire_mode"
        android:layout_width="248dp"
        android:layout_height="40dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageButton
            android:id="@+id/fr_weapon_details_edit_ibtn_single"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonshape_left"
            android:contentDescription="@string/single_fire_button"
            app:srcCompat="@drawable/ic_single" />

        <ImageButton
            android:id="@+id/fr_weapon_details_edit_ibtn_burst"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonshape_center"
            android:contentDescription="@string/burst_fire_button"
            app:srcCompat="@drawable/ic_burst" />

        <Button
            android:id="@+id/fr_weapon_details_edit_btn_full-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonshape_center"
            android:text="@string/auto" />

        <Button
            android:id="@+id/fr_weapon_details_edit_btn_safe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonshape_right"
            android:text="@string/safe" />

    </LinearLayout>

    <include layout="@layout/fab_buttons_layout"></include>

</android.support.constraint.ConstraintLayout>