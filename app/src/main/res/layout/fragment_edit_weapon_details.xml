<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weapon_details_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="false"
    android:layout_centerInParent="false"
    android:layout_centerVertical="false"
    tools:context="dk.blackdarkness.g17.cphindustries.activities.SceneViewActivity">


    <TextView
        android:id="@+id/fr_weapon_details_edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Weapon 1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fr_weapon_details_edit_status"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Status"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/fr_weapon_details_edit_title"
        app:layout_constraintTop_toBottomOf="@+id/fr_weapon_details_edit_title" />

    <TextView
        android:id="@+id/fr_weapon_details_edit_status_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/fr_weapon_details_edit_status"
        app:layout_constraintTop_toBottomOf="@+id/fr_weapon_details_edit_status" />

    <TextView
        android:id="@+id/fr_weapon_details_edit_tvDetails_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Details"
        app:layout_constraintStart_toStartOf="@+id/fr_weapon_details_edit_title"
        app:layout_constraintTop_toBottomOf="@+id/fr_weapon_details_edit_status_text" />

    <LinearLayout
        android:id="@+id/fr_weapon_details_edit_linearLayout_detail_titles"
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/fr_weapon_details_edit_tvDetails_title"
        app:layout_constraintTop_toBottomOf="@+id/fr_weapon_details_edit_tvDetails_title">

        <TextView
            android:id="@+id/fr_weapon_details_edit_tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name"
            android:textAlignment="textEnd"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="246dp" />

        <TextView
            android:id="@+id/fr_weapon_details_edit_tvShoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Shoot"
            android:textAlignment="textEnd"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="300dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fr_weapon_details_edit_detail_description"
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/fr_weapon_details_edit_linearLayout_detail_titles"
        app:layout_constraintTop_toBottomOf="@+id/fr_weapon_details_edit_tvDetails_title">



        <EditText
            android:id="@+id/fr_weapon_details_edit_tvName_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Weapon 1"
            tools:layout_editor_absoluteX="210dp"
            tools:layout_editor_absoluteY="246dp" />


        <Button
            android:id="@+id/fr_weapon_details_edit_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="205dp"
            tools:layout_editor_absoluteY="303dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fr_weapon_details_edit_linearLayout_battery"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/fr_weapon_details_edit_linearLayout_fire_mode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/fr_weapon_details_edit_ivBattery_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/battery_level_icon"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_battery"
            tools:layout_editor_absoluteX="211dp"
            tools:layout_editor_absoluteY="262dp" />

        <TextView
            android:id="@+id/fr_weapon_details_edit_tvBattery_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/battery"
            android:textAlignment="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/fr_weapon_details_edit_tvBattery_level"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="97%"
            android:textAlignment="center"
            android:textSize="12sp" />

    </LinearLayout>

